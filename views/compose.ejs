<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label >Title</label>
        <input class="form-control" type="text" name="postTitle" >
    </div>
    <div class="form-group">
        <label >Post</label>
        <textarea  class="form-control" name="postContent" cols="40" rows="5"></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </div>
</form>


